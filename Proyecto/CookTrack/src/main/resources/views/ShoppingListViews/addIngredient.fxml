<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<VBox spacing="15" alignment="CENTER" xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.shoppingListControllers.AddIngredientController"
      style="-fx-background-color: #f9f9f9;">
    <padding>
        <Insets top="25" bottom="25" left="25" right="25"/>
    </padding>

    <Label text="Añadir Producto" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <Label text="Nombre del producto" style="-fx-font-size: 14px;"/>
    <ComboBox fx:id="ingredientComboBox" promptText="Buscar ingrediente" editable="true"
              style="-fx-pref-width: 220px;"/>

    <Label text="Cantidad (g/u)" style="-fx-font-size: 14px;"/>
    <TextField fx:id="amountField" promptText="Solo números" style="-fx-pref-width: 200px;"/>

    <Button text="Añadir" onAction="#handleAdd"
            style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 120px;"/>

</VBox>
