<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" spacing="10.0" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.shoppingListControllers.AddIngredientController">
    <children>
        <Label text="Añadir Ingrediente a la Lista">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </Label>
        <ComboBox fx:id="ingredientComboBox" prefWidth="200.0" promptText="Selecciona un ingrediente" />
        <TextField fx:id="amountField" prefWidth="200.0" promptText="Cantidad" />
        <HBox alignment="CENTER" spacing="10.0">
            <children>
                <Button onAction="#handleAdd" prefWidth="80.0" text="Añadir" />
                <Button onAction="#handleCancel" prefWidth="80.0" text="Cancelar" />
            </children>
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </HBox>
    </children>
</VBox>