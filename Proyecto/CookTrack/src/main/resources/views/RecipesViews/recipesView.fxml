<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<AnchorPane fx:id="rootPaneSee" style="-fx-background-color: #ffffff;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.recipesViewControllers.recipesController">

    <VBox fx:id="addRecipeVbox" spacing="10" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">

        <HBox>
            <Button fx:id="btnAddRecipe" mnemonicParsing="false" prefWidth="150" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5;" text="Crear nueva receta" />
            <Button fx:id="btnGoBack" mnemonicParsing="false" text="Ir atras" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5;" prefWidth="150"/>
        </HBox>

        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" prefHeight="500" vbarPolicy="AS_NEEDED" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
            <content>
                <VBox fx:id="recipesVbox" spacing="10">

                </VBox>
            </content>
        </ScrollPane>

    </VBox>

</AnchorPane>
