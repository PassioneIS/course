<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane fx:id="rootPaneAdd" style="-fx-background-color: #ffffff;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.recipesViewControllers.addRecipeController">

    <VBox fx:id="root" alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1">

        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Nombre de la Receta" wrappingWidth="150" />
        <TextField fx:id="txtRecipeName" promptText="Ingrese el nombre de la Receta" />

        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Tiempo de preparacion" wrappingWidth="150" />
        <TextField fx:id="txtRecipeTime" promptText="Ingrese el tiempo de preparaciÃ³n" />

       <VBox fx:id="recipeContainer" prefHeight="131.0" prefWidth="150">
          <children>
             <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Ingredientes" wrappingWidth="150"  />
             <Button fx:id="btnAddIngredient" mnemonicParsing="false" text="Agregar ingrediente" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5;" prefWidth="150"/>
          </children>
       </VBox>

        <VBox fx:id="stepContainer" prefHeight="81.0" prefWidth="150" spacing="5">
          <children>
              <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Ingresar Pasos" wrappingWidth="150" />

              <Button fx:id="btnAddStep" text="Agregar paso" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5;" prefWidth="150"/>
          </children>
        </VBox>

       <VBox fx:id="tagContainer" prefHeight="102.0" prefWidth="149.0">
          <children>
              <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Ingresar etiquetas" wrappingWidth="150" />

              <Button fx:id="btnAddTag" mnemonicParsing="false" text="Agregar Etiqueta" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5;" prefWidth="150" />
          </children>
       </VBox>

       <Button fx:id="btnCreateRecipe" mnemonicParsing="false" text="Crear receta" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5;" prefWidth="150" />

    </VBox>

</AnchorPane>